<section class="hero" style="background-image:url({{ section.settings.image_bg | img_url: "original" }});">
  <div class="container">
    <div class="hero-inner">
          <h1>{{ section.settings.hero_title }}</h1>
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_bg",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Homepage"
    }
  ] 
}
{% endschema %}