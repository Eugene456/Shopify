<section class="contacts">
    <div class="container">
        <div class="contacts-inner">
            <div class="contacts-info">
                {% if section.settings.title_contacts %}
                    <h2 class="contacts-title">{{ section.settings.title_contacts }}</h2>
                {% endif %}
                <div class="contacts-info-body">
                    {% if section.settings.email  %}
                        <p class="contacts-label">Email:</p>
                        <a href="mailto:{{ section.settings.email }}" class="contacts-link">{{ section.settings.email }}</a> 
                    {% endif %}
                    {% if section.settings.phone_call and section.settings.phone_show %}
                        <p class="contacts-label">Phone:</p>
                        <a href="tel:{{ section.settings.phone_call }}" class="contacts-link">{{ section.settings.phone_show }}</a>
                    {% endif %}    
                </div>
                <div class="contacts-info-img">
                    <img src="{{ 'phone.svg' | asset_url }}" alt="phone-decor">
                </div>
            </div>
            <div class="contacts-form">
                {% if section.settings.title_form %}
                    <h2 class="contacts-title">{{ section.settings.title_form }}</h2>
                 {% endif %}

                {% form 'contact' %}
                    <div class="form-field">
                        <input type="text" name="contact[name]" placeholder="Name" required>
                    </div>
                    <div class="form-field">
                        <input type="email" name="contact[email]" placeholder="Email" required>
                    </div>
                    <div class="form-field">
                        <textarea name="contact[body]" placeholder="Message" rows="4"></textarea>
                    </div>
                    <div class="form-actions">
                        {% if section.settings.button_link %}
                            <a href="{{ section.settings.button_link }}"> Message us</a>
                        {% endif %}
                        <button type="submit" class="btn-primary">Submit</button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Contacts",
  "settings": [
    {
      "type": "text",
      "id": "title_contacts",
      "label": "Title (Contacts)"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "phone_call",
      "label": "Phone (For call)"
    },
    {
      "type": "text",
      "id": "phone_show",
      "label": "Phone (For show)"
    },
    {
      "type": "text",
      "id": "title_form",
      "label": "Title (Form)"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button link (Message)"
    },
   
  ],
  "presets": [
    {
      "name": "Contacts",
      "category": "Contact Page"
    }
  ] 
}
{% endschema %}